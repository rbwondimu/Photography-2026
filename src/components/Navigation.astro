---
interface Props {
    theme?: 'dark' | 'light';
}
const { theme = 'dark' } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---
<nav class={`nav-container theme-${theme}`}>
    <div class="logo">
        <a href={base + "/"}>
            <img class="logo-image" src={base + "/logo.png"} alt="Wondimu Photography logo" />
        </a>
    </div>
    <ul class="nav-links">
        <li><a href={base + "/"}>Home</a></li>
        <li><a href={base + "/portfolio"}>Portfolio</a></li>
        <li><a href={base + "/about"}>About</a></li>
        <li><a href={base + "/contact"}>Contact</a></li>
    </ul>
</nav>

<style>
    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--spacing-md);
        padding: var(--spacing-md) var(--spacing-xl);
        background: var(--color-bg);
        backdrop-filter: none;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        box-sizing: border-box;
        border-bottom: 1px solid var(--color-border);
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .nav-container.theme-light {
        background: var(--color-bg);
        border-bottom: 1px solid var(--color-border);
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.45rem;
        padding: 0.3rem 0.5rem;
        flex: 0 1 auto;
        max-width: min(36vw, 290px);
        border: 1px solid var(--color-border);
        border-radius: 0.45rem;
        background: var(--color-surface);
    }
    .logo a {
        display: inline-flex;
        align-items: center;
    }
    .logo-image {
        width: 100%;
        min-width: 0;
        max-width: 100%;
        height: auto;
        display: block;
        object-fit: contain;
    }
    .nav-container.theme-light .logo {
        border-color: var(--color-border);
        background: var(--color-surface);
    }
    .nav-links {
        display: flex;
        flex: 1 1 auto;
        justify-content: flex-end;
        list-style: none;
        gap: clamp(0.7rem, 1.5vw, 1.4rem);
        margin: 0;
        padding: 0;
    }
    .nav-links a {
        font-size: 0.82rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--color-muted);
    }
    .nav-links a:hover, .nav-links a[aria-current="page"] {
        color: var(--color-accent);
    }
    
    @media (max-width: 768px) {
        .nav-container {
            padding: var(--spacing-md);
            flex-direction: column;
            gap: var(--spacing-md);
        }
        .nav-links {
            gap: var(--spacing-md);
            flex-wrap: wrap;
            justify-content: center;
        }
        .logo {
            justify-content: center;
            padding: 0.35rem 0.55rem;
        }
        .logo-image {
            width: min(86vw, 420px);
            min-width: 240px;
            height: auto;
        }
    }
</style>
