---
interface Props {
    theme?: 'dark' | 'light';
}
const { theme = 'dark' } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---
<nav class:list={["nav-container", `theme-${theme}`]}>
    <div class="logo">
        <a href={base + "/"}>Wondimu Photography</a>
    </div>
    <ul class="nav-links">
        <li><a href={base + "/"}>Home</a></li>
        <li><a href={base + "/portfolio"}>Portfolio</a></li>
        <li><a href={base + "/about"}>About</a></li>
        <li><a href={base + "/contact"}>Contact</a></li>
    </ul>
</nav>

<style>
    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-md) var(--spacing-xl);
        background: rgba(26, 26, 26, 0.9);
        backdrop-filter: blur(10px);
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        box-sizing: border-box;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .nav-container.theme-light {
        background: rgba(255, 255, 255, 0.95);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .logo a {
        font-family: var(--font-serif);
        font-size: 1.5rem;
        letter-spacing: 0.1em;
        font-weight: 700;
        text-transform: uppercase;
        color: var(--color-text); /* Uses CSS var from Layout's global defined class */
    }
    .nav-links {
        display: flex;
        list-style: none;
        gap: var(--spacing-lg);
        margin: 0;
        padding: 0;
    }
    .nav-links a {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--color-muted);
    }
    .nav-links a:hover, .nav-links a[aria-current="page"] {
        color: var(--color-text);
    }
    
    @media (max-width: 768px) {
        .nav-container {
            padding: var(--spacing-md);
            flex-direction: column;
            gap: var(--spacing-md);
        }
        .nav-links {
            gap: var(--spacing-md);
            flex-wrap: wrap;
            justify-content: center;
        }
    }
</style>
