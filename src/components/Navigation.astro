---
interface Props {
    theme?: 'dark' | 'light';
}
const { theme = 'dark' } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---
<nav class={`nav-container theme-${theme}`}>
    <div class="logo">
        <a href={base + "/"}>
            <img class="logo-image" src={base + "/header-logo.png"} alt="Black Lion Photography" />
        </a>
    </div>
    <ul class="nav-links">
        <li><a href={base + "/"}>Home</a></li>
        <li><a href={base + "/portfolio"}>Portfolio</a></li>
        <li><a href={base + "/about"}>About</a></li>
        <li><a href={base + "/contact"}>Contact</a></li>
    </ul>
</nav>

<style>
    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 0.5rem;
        padding: 0.3rem 0.85rem;
        height: 80px;
        background: var(--color-bg);
        -webkit-backdrop-filter: none;
        backdrop-filter: none;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        box-sizing: border-box;
        border-bottom: 1px solid var(--color-border);
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .nav-container.theme-light {
        background: var(--color-bg);
        border-bottom: 1px solid var(--color-border);
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0;
        padding: 0;
        flex: 0 1 auto;
        max-width: min(34vw, 360px);
    }
    .logo a {
        display: inline-flex;
        align-items: center;
        line-height: 0;
    }
    .logo-image {
        width: auto;
        min-width: 0;
        max-width: 100%;
        height: 74px;
        display: block;
        object-fit: contain;
    }
    .nav-links {
        display: flex;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        justify-content: center;
        list-style: none;
        gap: clamp(0.6rem, 1.2vw, 1.1rem);
        margin: 0;
        padding: 0;
    }
    .nav-links a {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--color-muted);
    }
    .nav-links a:hover, .nav-links a[aria-current="page"] {
        color: var(--color-accent);
    }
    
    @media (max-width: 768px) {
        .nav-container {
            padding: 0.25rem 0.5rem;
            flex-direction: row;
            gap: 0.35rem;
            height: 80px;
        }
        .nav-links {
            position: static;
            transform: none;
            left: auto;
            margin-left: auto;
            gap: 0.5rem;
            flex-wrap: wrap;
            justify-content: flex-end;
        }
        .nav-links a {
            font-size: 0.82rem;
            letter-spacing: 0.06em;
        }
        .logo {
            justify-content: flex-start;
            max-width: 300px;
        }
        .logo-image {
            width: auto;
            min-width: 0;
            height: 60px;
        }
    }
</style>
