---
interface Props {
    theme?: 'dark' | 'light';
}
const { theme = 'dark' } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---
<nav class:list={["nav-container", `theme-${theme}`]}>
    <div class="logo">
        <a href={base + "/"}>
            <span class="logo-main">Wondimu</span>
            <span class="logo-sub">'Your Brother'</span>
            <span class="logo-main">Photography</span>
        </a>
        <img
            class="logo-flag"
            src="https://upload.wikimedia.org/wikipedia/commons/thumb/f/ff/Flag_of_Ethiopia_%281897%E2%80%931974%29.svg/3840px-Flag_of_Ethiopia_%281897%E2%80%931974%29.svg.png"
            alt="Ethiopian flag"
        />
    </div>
    <ul class="nav-links">
        <li><a href={base + "/"}>Home</a></li>
        <li><a href={base + "/portfolio"}>Portfolio</a></li>
        <li><a href={base + "/about"}>About</a></li>
        <li><a href={base + "/contact"}>Contact</a></li>
    </ul>
</nav>

<style>
    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-md) var(--spacing-xl);
        background: rgba(26, 26, 26, 0.9);
        backdrop-filter: blur(10px);
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        box-sizing: border-box;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .nav-container.theme-light {
        background: rgba(255, 255, 255, 0.95);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    .logo a {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        line-height: 1;
        font-family: var(--font-serif);
        letter-spacing: 0.1em;
        font-weight: 700;
        color: var(--color-text); /* Uses CSS var from Layout's global defined class */
    }
    .logo-main {
        font-size: 1.5rem;
        text-transform: uppercase;
    }
    .logo-sub {
        font-size: 0.75rem;
        letter-spacing: 0.2em;
        margin: 0.2rem 0;
        text-transform: none;
    }
    .logo-flag {
        width: auto;
        height: 3.2rem;
        max-width: none;
        flex: 0 0 auto;
        display: block;
        border-radius: 2px;
        object-fit: contain;
    }
    .nav-links {
        display: flex;
        list-style: none;
        gap: var(--spacing-lg);
        margin: 0;
        padding: 0;
    }
    .nav-links a {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--color-muted);
    }
    .nav-links a:hover, .nav-links a[aria-current="page"] {
        color: var(--color-text);
    }
    
    @media (max-width: 768px) {
        .nav-container {
            padding: var(--spacing-md);
            flex-direction: column;
            gap: var(--spacing-md);
        }
        .nav-links {
            gap: var(--spacing-md);
            flex-wrap: wrap;
            justify-content: center;
        }
        .logo a {
            align-items: center;
        }
        .logo {
            justify-content: center;
        }
    }
</style>
