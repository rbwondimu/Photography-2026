---
interface Props {
	title: string;
    theme?: 'dark' | 'light';
}

const { title, theme = 'dark' } = Astro.props;
import Navigation from '../components/Navigation.astro';
---

<!doctype html>
<html lang="en" class={`theme-${theme}`}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Professional Photography Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL.replace(/\/$/, '') + "/favicon.svg"} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Navigation theme={theme} />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--color-bg: #171411;
		--color-text: #f3efe7;
		--color-accent: #c9a86a;
		--color-accent-hover: #dfc28e;
		--color-muted: #b8aa93;
		--font-serif: 'Playfair Display', serif;
		--font-sans: 'Lato', sans-serif;
		--spacing-sm: 0.5rem;
		--spacing-md: 1rem;
		--spacing-lg: 2rem;
		--spacing-xl: 4rem;
	}

    .theme-light {
        --color-bg: #ffffff;
        --color-text: #1a1a1a;
        --color-accent: #d4af37;
        --color-accent-hover: #b5952f;
        --color-muted: #666666;
    }

	html {
		font-family: var(--font-sans);
		background: var(--color-bg);
		color: var(--color-text);
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-serif);
		font-weight: 400;
		margin-top: 0;
	}
	a {
		color: inherit;
		text-decoration: none;
		transition: color 0.3s ease;
	}
	a:hover {
		color: var(--color-accent);
	}
</style>
