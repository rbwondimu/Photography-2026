---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Navigation from '../components/Navigation.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Professional Photography Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL.replace(/\/$/, '') + "/favicon.svg"} />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Navigation />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--color-bg: #1a1a1a;
		--color-text: #f0f0f0;
		--color-accent: #d4af37; /* Metallic Gold */
		--color-accent-hover: #f9d76e;
		--color-muted: #888888;
		--font-serif: 'Playfair Display', serif;
		--font-sans: 'Lato', sans-serif;
		--spacing-sm: 0.5rem;
		--spacing-md: 1rem;
		--spacing-lg: 2rem;
		--spacing-xl: 4rem;
	}
	html {
		font-family: var(--font-sans);
		background: var(--color-bg);
		color: var(--color-text);
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-serif);
		font-weight: 400;
		margin-top: 0;
	}
	a {
		color: inherit;
		text-decoration: none;
		transition: color 0.3s ease;
	}
	a:hover {
		color: var(--color-accent);
	}
</style>
