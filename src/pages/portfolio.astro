---
import Layout from '../layouts/Layout.astro';
import Gallery from '../components/Gallery.astro';

const categories = ["Portraits", "Weddings", "Events"];
---

<Layout title="Portfolio | Wondimu Photography">
    <main>
        <section class="gallery-section">
            <Gallery seamless={true} />
        </section>
    </main>
</Layout>

<script>
    // Simple client-side filtering logic (placeholder for now)
    const buttons = document.querySelectorAll('.filter-btn');
    buttons.forEach(btn => {
        btn.addEventListener('click', () => {
            // Remove active class from all
            buttons.forEach(b => b.classList.remove('active'));
            // Add to clicked
            btn.classList.add('active');
            
            // In a real implementation, this would filter the gallery items
            console.log(`Filtering by ${btn.getAttribute('data-filter')}`);
        });
    });
</script>

<style>
    main {
        padding-top: 80px; /* Offset for nav */
        min-height: 100vh;
        width: 100%;
        box-sizing: border-box;
        background: var(--color-bg);
    }

    @media (max-width: 768px) {
        main {
            padding-top: 130px; /* Taller stacked mobile nav */
        }
    }

    /* 
       Page header removed from markup, but styles kept just in case 
       or we can remove them. Let's keep main styles.
       
       For seamless look:
    */
    .gallery-section {
        padding: 0;
        width: 100%;
        max-width: 100%;
        background: var(--color-bg);
    }

    /* Seamless gallery layout is fully controlled in Gallery.astro */
</style>
